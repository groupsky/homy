# Sunseeker Monitoring Service Configuration
# Copy to .env and customize for your environment

# MQTT Configuration
MQTT_URL=mqtt://mqtts.sk-robot.com:1883
MQTT_USERNAME=app
MQTT_PASSWORD_FILE=/run/secrets/sunseeker_mqtt_password
MQTT_DEVICE_ID=your-device-id-here
MQTT_APP_ID=your-app-id-here

# InfluxDB Configuration
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN_FILE=/run/secrets/influxdb_write_user_password
INFLUXDB_ORG=your-org
INFLUXDB_BUCKET=sunseeker

# Service Configuration
LOG_LEVEL=info
HEALTH_CHECK_INTERVAL=30000
MESSAGE_TIMEOUT=5000

# Development/Testing Overrides
# Uncomment for local development without Docker secrets
# MQTT_PASSWORD=your-mqtt-password-here
# INFLUXDB_TOKEN=your-influx-token-here
