# Sunseeker Monitoring Service Configuration
# Copy to .env and customize for your environment

# MQTT Configuration
MQTT_URL=mqtts://mqtts.sk-robot.com:8883
MQTT_USERNAME=app
MQTT_PASSWORD_FILE=/run/secrets/sunseeker_mqtt_password
MQTT_DEVICE_ID=your-device-id-here
MQTT_APP_ID=your-app-id-here

# InfluxDB Configuration
INFLUX_URL=http://influxdb:8086
INFLUX_TOKEN_FILE=/run/secrets/influxdb_write_user_password
INFLUX_ORG=your-org
INFLUX_BUCKET=sunseeker

# Service Configuration
LOG_LEVEL=info
HEALTH_CHECK_INTERVAL=30000
MESSAGE_TIMEOUT=5000

# Development/Testing Overrides
# Uncomment for local development without Docker secrets
# MQTT_PASSWORD=your-mqtt-password-here
# INFLUX_TOKEN=your-influx-token-here